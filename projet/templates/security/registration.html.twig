{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription</h1>

    <div class="InscriptionLogin">

    {{ form_start(form) }}
    <div class="form-group">
        {{ form_row(form.username, {'label' : 'Nom d\'utilisateur', 'attr': {'class' : 'form-control'}} ) }}<br>
    </div>
    <div class="form-group">
        {{ form_row(form.password, {'label' : 'Mot de passe', 'attr': {'class' : 'form-control'}} ) }}<br>
    </div>
    <div class="form-group">
        {{ form_row(form.confirm_password, {'label' : 'Confirmation mot de passe', 'attr': {'class' : 'form-control'}} ) }}<br>
    </div>
    <button type="submit" class="btn btn-success">Inscription </button>

    {{ form_end(form) }}

    <br>
    <div class="redirect">
    <a href="{{ path('security_login') }}">Vous avez déjà un compte ? Connectez vous !</a>
    </div>

    </div>

{% endblock %}
