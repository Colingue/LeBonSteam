{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription</h1>

    {{ form_start(form) }}
    {{ form_row(form.username, {'label' : 'Nom d\'utilisateur'} ) }}
    {{ form_row(form.password, {'label' : 'Mot de passe'} ) }}
    {{ form_row(form.confirm_password, {'label' : 'Confirmation mot de passe'} ) }}
    <button type="submit" class="btn btn-success">Inscription </button>
    {{ form_end(form) }}
    <a href="{{ path('security_login') }}">Vous avez déjà un compte ? Connectez vous !</a>


{% endblock %}